{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "lib": ["esnext"], // Required for DOM and modern JS features
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    // "noEmit": true,
    "esModuleInterop": true, // Ensure compatibility with CommonJS modules
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true, // Ensures module-level isolation, useful for TypeScript + Babel
    "incremental": true, // Speed up subsequent builds
    "target": "ESNext",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"], // Removed Playwright and Vitest typings
    "paths": {
      "@/*": ["./src/*"] // Keep your custom paths
    }
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true,
    "transpileOnly": false,
    "esm": true,
    "logError": true
  },
  "include": [
    "**/*.ts",
    "src/**/*.ts",
    "src/tests/**/*.ts",
    "src/global.d.ts",
    "types"
  ],
  "exclude": ["node_modules", "src/**/*.d.ts"]
}
